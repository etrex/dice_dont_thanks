<%= raw(Kamiflex.build(self) do
  alt_text "#{params.dig(:profile, :displayName)}骰出的結果：#{@dices.sum}"
  bubble do
    body do
      text "#{params.dig(:profile, :displayName)}骰出的結果：#{@dices.sum}", weight: :bold, size: :sm
      horizontal_box margin: :md do
        @dices.each_with_index do |dice, index|
          image "https://dice-dont-thanks.herokuapp.com/images/dice/#{index%2+1}/#{dice}.png"
        end
      end
      separator color: "#cccccc", margin: :lg
      text "點擊以下圖示擲骰", weight: :bold, size: :sm, margin: :lg
      horizontal_box do
        image "https://dice-dont-thanks.herokuapp.com/images/button_1.png", action: message_action("骰")
        image "https://dice-dont-thanks.herokuapp.com/images/button_2.png", action: message_action("骰骰")
      end
    end
  end
end) %>